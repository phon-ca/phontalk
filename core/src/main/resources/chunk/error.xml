<?xml version="1.0" encoding="UTF-8"?>

<!-- 
-->
<chunk xmlns="https://www.phon.ca/ns/chunk">
    
    <!-- Parser -->
    <buffer name="Chat.g">
        <![CDATA[
error
	:	ERROR_START TEXT? ERROR_END
	->	^(ERROR_START TEXT?)
	;
]]>
    </buffer>
    
    <!-- Tree Walker -->
    <buffer name="ChatTree.g">
        <![CDATA[
error returns [String val]
	:	^(ERROR_START et=TEXT?)
	{
		$val = "(error:" + 
			($et != null ? $et.text : "") + ")";
	}
	;
]]>
    </buffer>
    
    <buffer name="Phon2XmlWalker.g">
        <![CDATA[
error
	:	^(ERROR_START et=TEXT?)
	->	template( errtext={$et.text} )
		"\<error\><errtext>\</error\>"
	;
]]>
    </buffer>
    
</chunk>